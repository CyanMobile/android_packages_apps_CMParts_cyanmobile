<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Expanded View Power Widget -->
	<PreferenceCategory android:title="@string/general_title">
		<ListPreference android:key="expanded_widget"
			android:dialogTitle="@string/title_expanded_widget"
			android:title="@string/title_expanded_widget"
			android:summary="@string/summary_expanded_widget"
			android:entries="@array/entries_expanded_widget"
			android:entryValues="@array/values_expanded_widget" />
		<ListPreference android:key="expanded_widget_bgr"
			android:dialogTitle="@string/title_expanded_widget_bgr"
			android:title="@string/title_expanded_widget_bgr"
			android:summary="@string/summary_expanded_widget_bgr"
			android:entries="@array/entries_expanded_widget_bgr"
			android:entryValues="@array/values_expanded_widget_bgr" />
		<Preference android:key="expanded_bgr_color_mask"
			android:title="@string/expanded_bgr_color_mask" android:summary="@string/expanded_bgr_color_mask"
			android:defaultValue="-1"/>
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/grid_title">
                <CheckBoxPreference android:key="pref_widget_grid_one"
                        android:title="@string/title_grid_one_expanded_widget" android:defaultValue="true"
                        android:summaryOn="@string/grid_one_expanded_widget_summaryOn"
                        android:summaryOff="@string/grid_one_expanded_widget_summaryOff" />
                <CheckBoxPreference android:key="pref_widget_grid_two"
                        android:title="@string/title_grid_two_expanded_widget" android:defaultValue="true"
                        android:summaryOn="@string/grid_two_expanded_widget_summaryOn"
                        android:summaryOff="@string/grid_two_expanded_widget_summaryOff" />
                <CheckBoxPreference android:key="pref_widget_grid_three"
                        android:title="@string/title_grid_three_expanded_widget" android:defaultValue="true"
                        android:summaryOn="@string/grid_three_expanded_widget_summaryOn"
                        android:summaryOff="@string/grid_three_expanded_widget_summaryOff" />
                <CheckBoxPreference android:key="pref_widget_grid_four"
                        android:title="@string/title_grid_four_expanded_widget" android:defaultValue="true"
                        android:summaryOn="@string/grid_four_expanded_widget_summaryOn"
                        android:summaryOff="@string/grid_four_expanded_widget_summaryOff" />
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/expanded_title">
		<CheckBoxPreference android:key="expanded_hide_onchange"
			android:title="@string/title_expanded_hide_onchange" android:summary="@string/summary_expanded_hide_onchange"
			android:defaultValue="false"/>
		<CheckBoxPreference android:key="expanded_hide_indicator"
			android:title="@string/title_expanded_hide_indicator" android:summary="@string/summary_expanded_hide_indicator"
			android:defaultValue="false"/>
		<CheckBoxPreference android:key="expanded_hide_scrollbar"
			android:title="@string/title_expanded_hide_scrollbar" android:summary="@string/summary_expanded_hide_scrollbar"
			android:defaultValue="true" />
		<ListPreference android:key="expanded_haptic_feedback"
			android:dialogTitle="@string/expanded_haptic_feedback_title" android:title="@string/expanded_haptic_feedback_title"
			android:summary="@string/expanded_haptic_feedback_summary" android:entries="@array/haptic_feedback_entries"
			android:entryValues="@array/haptic_feedback_values" />
		<Preference android:key="expanded_color_mask"
			android:title="@string/expanded_color_mask" android:summary="@string/expanded_color_mask"
			android:defaultValue="-1"/>
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/widget_title">
		<CheckBoxPreference android:key="pref_music_widget"
			android:title="@string/title_music_widget" android:summary="@string/summary_music_widget"
			android:defaultValue="true"/>
                <Preference
                        android:key="reset_widgets_pref"
                        android:title="@string/powerwidgets_reset_title"
                        android:summary="@string/powerwidgets_reset_summary" />
	</PreferenceCategory>
	<PreferenceCategory />
	<Preference android:key="squadkeys" android:title="@string/squadzone_title"
		android:summary="@string/squadzone_summary" android:selectable="false" />
</PreferenceScreen>
