<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- General options -->
    <PreferenceCategory android:title="@string/general_title">
        <CheckBoxPreference android:key="pref_pie_buttons_recent_level_toggle"
	    android:title="@string/pref_pie_buttons_home_level_toggle_title"
	    android:summary="@string/pref_pie_buttons_home_level_toggle_summary" />
        <CheckBoxPreference android:key="pref_pie_buttons_recent_app_toggle"
            android:dependency="pref_pie_buttons_recent_level_toggle"
	    android:title="@string/pref_pie_buttons_home_app_toggle_title"
	    android:summary="@string/pref_pie_buttons_home_app_toggle_summary" />
        <ListPreference android:key="pref_pie_buttons_recent"
            android:dependency="pref_pie_buttons_recent_level_toggle"
            android:title="@string/pref_pie_buttons_recent_title"
	    android:summary="@string/pref_pie_buttons_home_summary"
            android:dialogTitle="@string/pref_pie_buttons_home_input_title"
            android:entries="@array/entries_pie_buttons_home"
	    android:entryValues="@array/values_pie_buttons_home" />
        <ListPreference android:key="pref_pie_buttons_recent1"
            android:dependency="pref_pie_buttons_recent_level_toggle"
            android:title="@string/pref_pie_buttons_recent1_title"
	    android:summary="@string/pref_pie_buttons_home_summary"
            android:dialogTitle="@string/pref_pie_buttons_home_input_title"
            android:entries="@array/entries_pie_buttons_homes"
	    android:entryValues="@array/values_pie_buttons_homes" />
        <ListPreference android:key="pref_pie_buttons_recent2"
            android:dependency="pref_pie_buttons_recent_level_toggle"
            android:title="@string/pref_pie_buttons_recent2_title"
	    android:summary="@string/pref_pie_buttons_home_summary"
            android:dialogTitle="@string/pref_pie_buttons_home_input_title"
            android:entries="@array/entries_pie_buttons_homes"
	    android:entryValues="@array/values_pie_buttons_homes" />
        <ListPreference android:key="pref_pie_buttons_recent3"
            android:dependency="pref_pie_buttons_recent_level_toggle"
            android:title="@string/pref_pie_buttons_recent3_title"
	    android:summary="@string/pref_pie_buttons_home_summary"
            android:dialogTitle="@string/pref_pie_buttons_home_input_title"
            android:entries="@array/entries_pie_buttons_homes"
	    android:entryValues="@array/values_pie_buttons_homes" />
        <ListPreference android:key="pref_pie_buttons_recent4"
            android:dependency="pref_pie_buttons_recent_level_toggle"
            android:title="@string/pref_pie_buttons_recent4_title"
	    android:summary="@string/pref_pie_buttons_home_summary"
            android:dialogTitle="@string/pref_pie_buttons_home_input_title"
            android:entries="@array/entries_pie_buttons_homes"
	    android:entryValues="@array/values_pie_buttons_homes" />
    </PreferenceCategory>
</PreferenceScreen>
